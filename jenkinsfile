pipeline{

	agent {label 'docker_agent'}

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

	stages {
	    
	stage('Test') {
            steps {
                sh 'pip install coverage'
                sh 'pip install -e \'.[test]\''
                sh 'coverage run -m pytest'
                sh 'coverage report'
            }
        }
   
        stage('gitclone') {

			steps {
				git 'https://github.com/aisakova29/ci-cd-itmo'
			}
		}

		stage('Build') {

			steps {
				sh 'docker build -t aisakova/webapp_test:latest .'
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'docker push aisakova/webapp_test:latest'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}
