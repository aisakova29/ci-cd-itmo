pipeline{

	agent {label 'docker_agent'}

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
		TAG = '${BUILD NUMBER}'
	}

	stages {
   
            stage('gitclone') {

		        steps {
				git 'https://github.com/aisakova29/ci-cd-itmo.git'
			}
		}

		stage('Test') {

                        steps {
                                sh 'pip install coverage'
                                sh 'pip install -e \'.[test]\''
                                sh 'coverage run -m pytest'
                                sh 'coverage report'
            }
        }


                stage('Build') {

			steps {
				chechout scm
				def default_container_image = docker.build("itmo-web:${env.BUILD_ID}")
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
				sh 'docker push aisakova29/default_container_image
			}
		}

		
                stage('ansible') {
                        steps {
                                sh 'ansible all -i hosts -m ping'
                                sh 'ansible-playbook -i hosts playbook1.yml --extra-vars "default_container_image=aisakova29/itmo-web:1.0.$TAG"'
                                sh 'ansible-playbook -i hosts playbook2.yml'
			}
                 }
	}

}
